@{
    ViewData["Title"] = "Asda's super web app";
}

<div class="text-center">
    <h1 class="display-4">Welcome Asda Team!</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>


<div style="margin-bottom: 20px;">
    <button id="button" class="btn btn-primary">Invoke Function</button>
</div>
<div class="alert alert-primary" role="alert" id="message" style="display: none;"></div>
<div class="alert alert-danger" role="alert" id="error" style="display: none;"></div>
<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.4.1.min.js"></script>
<script>
    var url = "/api/test";
    $("#button").click(function () {
        $("#message").text("Loading...");
        $.get(url)
            .done(function (data) {
                $("#message").text(data).show();
            })
            .fail(function (error) {
                $("#error").text(JSON.stringify(error)).show();
            })
    });
</script>